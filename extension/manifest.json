{
  "manifest_version": 3,
  "name": "CogniWeave Workflow Capture",
  "version": "1.0.0",
  "description": "Workflow Capture Layer for CogniWeave",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ],
  "action": {
    "default_popup": "src/ui/popup.html"
  }
}
